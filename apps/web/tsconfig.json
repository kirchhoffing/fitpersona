{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/workouts/exercise-data": ["../../packages/exercises/src/exercise-data"],
      "@/exercise-data": ["../../packages/exercises/src/exercise-data"],
      "@/nutrition/*": ["../../packages/nutrition/*"],
      "@fitpersona/nutrition": ["../../packages/nutrition/calorie-calculation"]
    }
  },

  "include": [
  "../../types",
  "next-env.d.ts",
  "**/*.ts",
  "**/*.tsx",
  ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
