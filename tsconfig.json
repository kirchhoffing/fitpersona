{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/exercises/src/*"],
      "@fitpersona/database": ["packages/database/src"],
      "@fitpersona/workouts/*": ["packages/workouts/*"],
      "@fitpersona/exercises": ["packages/exercises/src/index.ts"]
    }
  },
  "exclude": ["node_modules"]
} 